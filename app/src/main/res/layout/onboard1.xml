<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="79dp"
            android:layout_height="64dp"
            android:src="@drawable/ats_kiri" />
        <ImageView
            android:id="@+id/img2"
            android:layout_width="105dp"
            android:layout_height="109dp"
            android:src="@drawable/ats_kanan"
            android:layout_alignParentRight="true"/>
        <ImageView
            android:id="@+id/img3"
            android:layout_width="92dp"
            android:layout_height="87dp"
            android:src="@drawable/bwh_kiri"
            android:layout_alignParentBottom="true"/>
        <ImageView
            android:id="@+id/img4"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:src="@drawable/bwh_kanan"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:id="@+id/img5"
            android:layout_width="322dp"
            android:layout_height="434dp"
            android:src="@drawable/ob1"
            android:layout_below="@id/img1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"/>

        <ImageView
            android:id="@+id/img6"
            android:layout_width="242dp"
            android:layout_height="42dp"
            android:src="@drawable/sayur"
            android:layout_below="@id/img5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ob1"
            android:fontFamily="@font/poppins_medium"
            android:textSize="15dp"
            android:layout_below="@id/img6"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textColor="#564734"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>