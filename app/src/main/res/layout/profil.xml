<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="80dp">
            <LinearLayout
                android:id="@+id/tit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="24dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp">
                <ImageButton
                    android:layout_width="19.47dp"
                    android:layout_height="11.15dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/back"/>
                <TextView
                    android:layout_width="343dp"
                    android:layout_height="wrap_content"
                    android:text="Profil"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="18dp"
                    android:textAlignment="center"
                    android:textColor="#0C2E0B"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="24dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="178dp"
                            android:layout_height="165dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/prl" />
                        <ImageButton
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/wrt"
                            android:src="@drawable/wrt"
                            android:layout_alignParentRight="true"/>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Profil guwehh"
                android:fontFamily="@font/poppins_bold"
                android:textSize="16dp"
                android:textColor="#8EA076"
                android:layout_marginTop="24dp"/>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginBottom="24dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama Lengkap"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="#564734"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:background="@drawable/input"
                        android:layout_marginTop="5dp"
                        android:hint="Nama guwehhhhh"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="12dp"
                        android:textColor="#62894F"
                        android:paddingLeft="16dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="#564734"
                        android:layout_marginTop="16dp"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:background="@drawable/input"
                        android:layout_marginTop="5dp"
                        android:hint="guwehhhhhhh@gmail.com"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="12dp"
                        android:textColor="#62894F"
                        android:paddingLeft="16dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nomor HP"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="#564734"
                        android:layout_marginTop="16dp"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:background="@drawable/input"
                        android:layout_marginTop="5dp"
                        android:hint="085264426329"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="12dp"
                        android:textColor="#62894F"
                        android:paddingLeft="16dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Alamat"
                        android:fontFamily="@font/poppins_bold"
                        android:textColor="#564734"
                        android:layout_marginTop="16dp"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:background="@drawable/input"
                        android:layout_marginTop="5dp"
                        android:hint="Rumbai"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="12dp"
                        android:textColor="#62894F"
                        android:paddingLeft="16dp"/>
                </LinearLayout>

            </ScrollView>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/menu"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageButton
                        android:layout_width="32dp"
                        android:layout_height="35dp"
                        android:src="@drawable/brn"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/brn"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Beranda"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/white"
                        android:textSize="10dp"
                        android:layout_marginLeft="19dp"
                        android:layout_marginTop="1dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageButton
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/produk"
                        android:layout_marginLeft="68dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/produk"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sayuran"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/white"
                        android:textSize="10dp"
                        android:layout_marginLeft="65dp"
                        android:layout_marginTop="1dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageButton
                        android:layout_width="36dp"
                        android:layout_height="32.4dp"
                        android:src="@drawable/mart"
                        android:layout_marginLeft="72dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/mart"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pesanan"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/white"
                        android:textSize="10dp"
                        android:layout_marginLeft="68dp"
                        android:layout_marginTop="1dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageButton
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/profil"
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/fil"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profil"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/white"
                        android:textSize="10dp"
                        android:layout_marginLeft="75dp"
                        android:layout_marginTop="1dp"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>