<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="79dp"
            android:layout_height="64dp"
            android:src="@drawable/ats_kiri" />
        <ImageView
            android:id="@+id/img2"
            android:layout_width="105dp"
            android:layout_height="109dp"
            android:src="@drawable/ats_kanan"
            android:layout_alignParentRight="true"/>
        <ImageView
            android:id="@+id/img3"
            android:layout_width="92dp"
            android:layout_height="87dp"
            android:src="@drawable/bwh_kiri"
            android:layout_alignParentBottom="true"/>
        <ImageView
            android:id="@+id/img4"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:src="@drawable/bwh_kanan"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:id="@+id/img5"
            android:layout_width="150dp"
            android:layout_height="153.3dp"
            android:src="@drawable/syr"
            android:layout_below="@id/img1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="33dp"/>

        <ImageView
            android:id="@+id/img6"
            android:layout_width="242dp"
            android:layout_height="42dp"
            android:src="@drawable/sayur"
            android:layout_below="@id/img5"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/txt"
            android:layout_width="281dp"
            android:layout_height="wrap_content"
            android:text="@string/ob3"
            android:fontFamily="@font/poppins_bold"
            android:textSize="24dp"
            android:layout_below="@id/img6"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:textAlignment="center"
            android:textColor="#564734"/>

        <Button
            android:id="@+id/btn1"
            android:layout_width="268dp"
            android:layout_height="60dp"
            android:layout_below="@id/txt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:background="@drawable/round_button"
            android:text="Masuk"
            android:fontFamily="@font/poppins_bold"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textAllCaps="false"/>

        <Button
            android:layout_width="268dp"
            android:layout_height="60dp"
            android:layout_below="@id/btn1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:background="@drawable/round_button"
            android:text="Daftar"
            android:fontFamily="@font/poppins_bold"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textAllCaps="false"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>