<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="80dp">
            <LinearLayout
                android:id="@+id/tit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="24dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp">
                <ImageButton
                    android:layout_width="19.47dp"
                    android:layout_height="11.15dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/back"/>
                <TextView
                    android:layout_width="343dp"
                    android:layout_height="wrap_content"
                    android:text="Detail Sayur"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="18dp"
                    android:textAlignment="center"
                    android:textColor="#0C2E0B"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="237dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:src="@drawable/matsg"
                android:layout_marginTop="24dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tomat"
                android:fontFamily="@font/poppins_bold"
                android:textSize="18dp"
                android:textColor="#564734"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="24dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tomato"
                android:fontFamily="@font/poppins_italic"
                android:textSize="16dp"
                android:textColor="#564734"
                android:layout_marginLeft="24dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stok      :"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="16dp"
                    android:textColor="#564734"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="48dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100 kg"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="18dp"
                    android:textColor="#445F3B"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="48dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Harga   :"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="16dp"
                    android:textColor="#564734"
                    android:layout_marginLeft="24dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 15.000/kg"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="18dp"
                    android:textColor="#445F3B"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/round_button"
                android:text="BELI"
                android:fontFamily="@font/poppins_bold"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="48dp"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>